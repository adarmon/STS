{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Annuaire</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ entity.prenom }}</td>
            </tr>
            <tr>
                <th>Telfixe</th>
                <td>{{ entity.telFixe }}</td>
            </tr>
            <tr>
                <th>Telmobile</th>
                <td>{{ entity.telMobile }}</td>
            </tr>
            <tr>
                <th>Departement</th>
                <td>{{ entity.departement }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('annuaire') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('annuaire_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
